
provider "vsphere" {
  user           = "{{ vsphere.user }}"
  password       = "{{ vsphere.passwd }}"
  vsphere_server = "{{ vsphere.server }}"

  # If you have a self-signed cert
  allow_unverified_ssl = true
}

data "vsphere_datacenter" "dc" {
  name = "{{ vsphere.datacenter_name }}"
}

data "vsphere_compute_cluster" "cluster" {
  name          = "{{ vsphere.cluster_name }}"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_datastore" "datastore1" {
  name          = "{{ vsphere.datastore_name }}"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_virtual_machine" "RHCOS_template" {
  name          = "{{ vsphere.RHCOS_template_name }}"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_network" "network_api" {
  name          = "{{ node_net_port_group }}"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}

data "vsphere_network" "network_opflex" {
  name          = "{{ aci_system_id }}"
  datacenter_id = "${data.vsphere_datacenter.dc.id}"
}


variable "master_api_macs" {
    description = "OCP 4 Master API MAC Address"
    type        = list(string)
    default     = {{ masters_api_mac_list | to_json }}
}

variable "master_api_ips" {
   description = "OCP 4 Master API IP"
   type        = list(string)
   default     = {{ masters_api_ip_list | to_json }}

}

variable "master_ignition_url" {
    #base64string
    default = ""
}
